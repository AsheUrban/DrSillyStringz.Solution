@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h2>ENGINEERS</h2>
<h3>Select an engineer to view their details and work orders.</h3>
<hr />

<div class="card">
@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet.</h3>
} 


  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
</div>
<hr />

<p class="fancyBtn">@Html.ActionLink("Add new Engineer", "Create", "Engineers")</p> 
<p class="fancyBtn">@Html.ActionLink("Add new Machine", "Create", "Machines")</p> 
<p class="fancyBtn">@Html.ActionLink("Back to Machines", "Index", "Machines")</p>


