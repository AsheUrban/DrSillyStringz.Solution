@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 


  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }) 
      @* | @engineer.Machine.Type *@
  </li>
  }

<p class="fancyBtn">@Html.ActionLink("Add new Engineer", "Create", "Engineers")</p> 
<p class="fancyBtn">@Html.ActionLink("Add new Machine", "Create", "Machines")</p> 
<p class="fancyBtn">@Html.ActionLink("Back to Machines", "Index", "Machines")</p>
<p class="fancyBtn">@Html.ActionLink("View All", "ViewAll", "Home")</p>

