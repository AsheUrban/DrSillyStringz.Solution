@{
  Layout = "_Layout";
}

@using Factory.Models;
@model Factory.Models.Engineer

<h2>EDIT ENGINEER |  @Html.DisplayFor(model => model.Name)</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.Label("Name: ")
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.Label("Engineering Specialty: ")
  @Html.EditorFor(model => model.Specialty)
  <br>
  <input type="submit" value="Save" class="fancyBtn2" />
<hr />
  <p class="fancyBtn">@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>
}

<p class="fancyBtn">@Html.ActionLink("Add a Machine", "AddMachine", new { id = Model.EngineerId })</p>
<p class="fancyBtn">@Html.ActionLink("Delete a Machine", "DeleteMachine", "Engineers")</p>