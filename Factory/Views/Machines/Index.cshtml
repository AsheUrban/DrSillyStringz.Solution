@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h2>MACHINES</h2>
<h3>Select a machine to view it's details and work orders.</h3>
<hr />

<div class="card">
@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet.</h3>
}
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Type}", "Details", new { id = machine.MachineId })</li>
}
</div>
<hr />

<p class="fancyBtn">@Html.ActionLink("Add new Machine", "Create", "Machines")</p>
<p class="fancyBtn">@Html.ActionLink("Add new Engineer", "Create", "Engineers")</p> 
<p class="fancyBtn">@Html.ActionLink("Back to Engineers", "Index", "Engineers")</p>
