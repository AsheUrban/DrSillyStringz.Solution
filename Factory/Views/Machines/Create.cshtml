@{
  Layout = "_Layout";
}

@using Factory.Models;
@model Factory.Models.Machine

<h2>ADD A MACHINE</h2>
<p>To add an engineer to a machine, first add the machine and then edit it to include any engineers working on it.</p>
<hr />
<div class="card">
@using (Html.BeginForm())
{
  @Html.Label("Machine Type: ") 
  @Html.TextBoxFor(model => model.Type)
  <br>
  @Html.Label("Project Description: ") 
  @Html.EditorFor(model => model.Description) 
  <br>
  <input type="submit" value="ADD" class="fancyBtn2" />
}
</div>
<hr />
<p class="fancyBtn">@Html.ActionLink("Back to Machines", "Index", "Machines")</p>
<p class="fancyBtn">@Html.ActionLink("Back to Engineers", "Index", "Engineers")</p>
