@{
  Layout = "_Layout";
}

@using Factory.Models;
@model Factory.Models.Machine

<h2>EDIT MACHINE |  @Html.DisplayFor(model => model.Type)</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Machine Type: ")
  @Html.TextBoxFor(model => model.Type)
  <br>
  @Html.Label("Project Description: ")
  @Html.EditorFor(model => model.Description)
  <br>
  <input type="submit" value="Save" class="fancyBtn2" />
<hr />
  <p class="fancyBtn">@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
}

<p class="fancyBtn">@Html.ActionLink("Add an Engineer", "AddEngineer", new { id = Model.MachineId })</p>